<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragment.DiscoverFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lynch_100"
        app:navigationIcon="@drawable/ic_outline_arrow_back_24"
        app:title="Discover"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_corner_bg"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:text="Film o attori"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_outline_search_24" />

    <TextView
        android:id="@+id/top_generes_title_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_margin="20dp"
        android:text="I tuoi generi top"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.example.cinemates.util.RecyclerViewEmptySupport
        android:id="@+id/rcv_top_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_generes_title_section"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/other_categories_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rcv_top_genres"
        android:layout_margin="20dp"
        android:text="Sfoglia tutto"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>