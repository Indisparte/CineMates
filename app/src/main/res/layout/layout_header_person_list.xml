<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="itemCount"
            type="String" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:showIn="@layout/fragment_media_cast">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:text="@{itemCount}"
            android:textColor="@color/geyser"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="59 people" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:drawableEnd="@drawable/ic_baseline_filter_list_24"
            android:drawableTint="@color/vermilion_100"
            android:text="Order"
            android:textAllCaps="false"
            android:textColor="@color/vermilion_100"
            android:textSize="12sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>